<!-- <!DOCTYPE html> -->
<html lang="en">
  <!--head section-->
  <%- include('layouts/head'); %>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); %>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('img/G2-bg.jpg')">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="page-heading">
              <div class="container hdr">
                <h1>Book G2 Test</h1>
                <br />
              </div>
            </div>
          </div>
        </div>
      </div>
      <% if (responseObject && responseObject['message']) { %> <% if
      (responseObject['status']==='Success' ) { %>
      <div class="alert alert-success banner">
        <%= responseObject['message'] %>
      </div>
      <% } else { %>
      <div class="alert alert-danger banner">
        <%= responseObject['message'] %>
      </div>
      <% } %> <% } %>
    </header>
    <!-- Main Content-->
    <!-- G2 Form -->
    <main class mb-4>
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <p>
              Embark on the journey of a lifetime with G2 Driving, where the
              road to independence begins!
            </p>
            <div class="my-5">
              <form
                id="contactForm"
                action="/drive/G2"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-sections-container">
                  <div class="form-sections">
                    <legend>Personal Information</legend>
                    <div class="form-floating">
                      <label for="firstName" class="form-label"
                        >First Name</label
                      >
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="firstName"
                        name="firstName"
                        value="<%= responseObject['licenseData'].firstName %>"
                        placeholder="Enter your first name"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="lastName"
                        name="lastName"
                        value="<%= responseObject['licenseData'].lastName %>"
                        placeholder="Enter your last name"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="licenseNumber" class="form-label"
                        >License Number</label
                      >
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="licenseNumber"
                        name="licenseNumber"
                        value="<%= responseObject['licenseData'].licenseNumber %>"
                        placeholder="Enter your license number (8 characters)"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="age" class="form-label">Age</label>
                      <input
                        type="number"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="age"
                        name="age"
                        value="<%= responseObject['licenseData'].age %>"
                        placeholder="Enter your age"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="dob" class="form-label">Date of Birth</label>
                      <input
                        type="date"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="dob"
                        name="dob"
                        value="<%= responseObject['licenseData'].dob.toISOString().split('T')[0] %>"
                      />
                    </div>
                  </div>

                  <div class="form-sections">
                    <legend>Vehicle Information</legend>
                    <div class="form-floating">
                      <label for="make" class="form-label">Car Make</label>
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="make"
                        name="make"
                        value="<%= responseObject['licenseData'] ? responseObject['licenseData'].carDetails.make : '' %>"
                        placeholder="Enter your car make"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="model" class="form-label">Car Model</label>
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="model"
                        name="model"
                        value="<%= responseObject['licenseData'] ? responseObject['licenseData'].carDetails.model : '' %>"
                        placeholder="Enter your car model"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="year" class="form-label">Car Year</label>
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="year"
                        name="year"
                        value="<%= responseObject['licenseData'] ? responseObject['licenseData'].carDetails.year : '' %>"
                        placeholder="Enter your car year"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="plateNumber" class="form-label"
                        >Plate Number</label
                      >
                      <input
                        type="text"
                        class="form-control<%= responseObject['licenseData'].licenseNumber ? ' disabled' :'' %>"
                        id="plateNumber"
                        name="plateNumber"
                        value="<%= responseObject['licenseData'] ? responseObject['licenseData'].carDetails.plateNumber : '' %>"
                        placeholder="Enter your car plate number"
                      />
                    </div>
                  </div>
                </div>
                <% if (!responseObject['licenseData'].licenseNumber) { %>
                <button class="btn btn-primary text-uppercase" type="submit">
                  Submit
                </button>
                <% } %>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      let alertElement = document.querySelector(".alert");
      if (alertElement) {
        setTimeout(() => {
          alertElement.style.display = "none";
        }, 2000);
      }
    </script>
    <!-- Footer-->
    <%- include('layouts/footer'); %>
    <!--Bootsrap content-->
    <%- include('layouts/script'); %>
  </body>
</html>
