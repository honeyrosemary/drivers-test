<!-- <!DOCTYPE html> -->
<html lang="en">
  <!--head section-->
  <%- include('layouts/head'); %>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); %>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('img/G-bg.jpg')">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="page-heading">
              <div class="container hdr">
                <h1>Book G Test</h1>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% if (responseObjectG && responseObjectG['message']) { if
      (responseObjectG['status']==='Success' ) { %>
      <div class="alert alert-success banner">
        <%= responseObjectG['message'] %>
      </div>
      <% } else { %>
      <div class="alert alert-danger banner">
        <%= responseObjectG['message'] %>
      </div>
      <% }} %>
    </header>

    <!-- Main Content-->
    <main class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <!--
              <form
                id="license-form"
                method="post"
                action="/drive/G"
                enctype="multipart/form-data"
              >
                <div class="mb-3">
                  <label for="licenseNumber" class="form-label"
                    >License Number</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="licenseNumber"
                    name="licenseNumber"
                    placeholder="Enter your license number"
                  />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
              -->

            <% if (responseObjectG['licenseData']) { %>
            <p>
              Shown below is your vehicle details. Hit update button to make
              changes to the existing data for the license number <%=
              responseObjectG['licenseData'].licenseNumber %>. You can only edit
              your vehicle details and not your personal info.
            </p>
            <div class="my-5">
              <form
                id="contactForm"
                action="/driveUpdate/G2"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-sections-container">
                  <div class="form-sections">
                    <legend>Personal Information</legend>
                    <div class="form-floating">
                      <label for="firstName" class="form-label"
                        >First Name</label
                      >
                      <input
                        type="text"
                        class="form-control disabled"
                        id="firstName"
                        name="firstName"
                        value="<%= responseObjectG['licenseData'].firstName %>"
                        placeholder="Enter your first name"
                        readonly
                      />
                    </div>

                    <div class="form-floating">
                      <label for="lastName" class="form-label">Last Name</label>
                      <input
                        type="text"
                        class="form-control disabled"
                        id="lastName"
                        name="lastName"
                        value="<%= responseObjectG['licenseData'].lastName %>"
                        placeholder="Enter your last name"
                        readonly
                      />
                    </div>

                    <div class="form-floating">
                      <label for="licenseNumber" class="form-label"
                        >License Number</label
                      >
                      <input
                        type="text"
                        class="form-control disabled"
                        id="licenseNumber"
                        name="licenseNumber"
                        value="<%= responseObjectG['licenseData'].licenseNumber %>"
                        placeholder="Enter your license number (8 characters)"
                        readonly
                      />
                    </div>

                    <div class="form-floating">
                      <label for="age" class="form-label">Age</label>
                      <input
                        type="number"
                        class="form-control disabled"
                        id="age"
                        name="age"
                        value="<%= responseObjectG['licenseData'].age %>"
                        placeholder="Enter your age"
                        readonly
                      />
                    </div>

                    <div class="form-floating">
                      <label for="dob" class="form-label">Date of Birth</label>
                      <input
                        type="date"
                        class="form-control disabled"
                        id="dob"
                        name="dob"
                        readonly
                        value="<%= responseObjectG['licenseData'].dob.toISOString().split('T')[0] %>"
                      />
                    </div>
                  </div>

                  <div class="form-sections">
                    <legend>Vehicle Information</legend>
                    <div class="form-floating">
                      <label for="make" class="form-label">Car Make</label>
                      <input
                        type="text"
                        class="form-control"
                        id="make"
                        name="make"
                        value="<%= responseObjectG['licenseData'] ? responseObjectG['licenseData'].carDetails.make : '' %>"
                        placeholder="Enter your car make"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="model" class="form-label">Car Model</label>
                      <input
                        type="text"
                        class="form-control"
                        id="model"
                        name="model"
                        value="<%= responseObjectG['licenseData'] ? responseObjectG['licenseData'].carDetails.model : '' %>"
                        placeholder="Enter your car model"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="year" class="form-label">Car Year</label>
                      <input
                        type="text"
                        class="form-control"
                        id="year"
                        name="year"
                        value="<%= responseObjectG['licenseData'] ? responseObjectG['licenseData'].carDetails.year : '' %>"
                        placeholder="Enter your car year"
                      />
                    </div>

                    <div class="form-floating">
                      <label for="plateNumber" class="form-label"
                        >Plate Number</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="plateNumber"
                        name="plateNumber"
                        value="<%= responseObjectG['licenseData'] ? responseObjectG['licenseData'].carDetails.plateNumber : '' %>"
                        placeholder="Enter your car plate number"
                      />
                    </div>
                  </div>
                </div>
                <button class="btn btn-primary text-uppercase" type="submit">
                  Update
                </button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
    <!-- Footer-->
    <%- include('layouts/footer'); %>
    <!--Bootsrap content-->
    <%- include('layouts/script'); %>
    <script>
      let alertElement = document.querySelector(".alert");
      if (alertElement) {
        setTimeout(() => {
          alertElement.style.display = "none";
        }, 1500);
      }
    </script>
  </body>
</html>
